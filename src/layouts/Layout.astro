---
import { GoogleFontsOptimizer } from 'astro-google-fonts-optimizer'
import Navbar from '../components/Navbar';
import Footer from '../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />
  <title>Gabriel's Website</title>
  <GoogleFontsOptimizer url="https://fonts.googleapis.com/css2?family=Inter:wght@200;400;500;700&display=swap" />
</head>
<body class="bg-background text-foreground">
  <div class="flex-row">
    <div class="min-h-[90vh] place-items-start w-full">
      <Navbar client:visible />
      <div class="py-2 px-4">
        <slot />
      </div>
    </div>
    <div class="h-full place-items-end w-full">
      <Footer />
    </div>
  </div>
</body>
</html>
